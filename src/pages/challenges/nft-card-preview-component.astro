---
import ChallengeLayout from "../../layouts/ChallengeLayout.astro";
---

<ChallengeLayout title="NFT Card Preview Component" isDark>
  <Fragment slot="links">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
  </Fragment>

  <main>
    <div class="card">
      <div class="image-container">
        <img
          src="/frontend-mentor/challenges/nft-card-preview-component/image-equilibrium.jpg"
          alt="Equilibrium"
        />
        <div class="image-cover"></div>
        <img
          src="/frontend-mentor/challenges/nft-card-preview-component/icon-view.svg"
          alt="eye icon"
          class="eye-icon"
        />
      </div>
      <h1>Equilibrium #3429</h1>
      <p>Our Equilibrium collection promotes balance and calm.</p>
      <div class="information">
        <div class="price">
          <h2>0.041 ETH</h2>
          <img
            src="/frontend-mentor/challenges/nft-card-preview-component/icon-ethereum.svg"
            alt="ethereum logo"
          />
        </div>
        <div class="time">
          <p>3 days left</p>
          <img
            src="/frontend-mentor/challenges/nft-card-preview-component/icon-clock.svg"
            alt=""
          />
        </div>
      </div>
      <hr />
      <div class="card-footer">
        <img
          src="/frontend-mentor/challenges/nft-card-preview-component/image-avatar.png"
          alt=""
        />
        <p>Creation of <span>Jules Wyvern</span></p>
      </div>
    </div>
  </main>
</ChallengeLayout>

<style>
  :root {
    font-family: "Outfit", sans-serif;

    --soft-blue: hsl(215, 51%, 70%);
    --cyan: hsl(178, 100%, 50%);
    --main-bg: hsl(217, 54%, 11%);
    --card-bg: hsl(216, 50%, 16%);
    --line: hsl(215, 32%, 27%);
  }

  body {
    background-color: var(--main-bg);
    height: 100vh;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .card {
    width: 330px;
    background-color: var(--card-bg);
    border-radius: 16px;
    padding: 22px;
    box-shadow: 0px 24px 48px -12px rgba(0, 0, 0, 0.3);
  }

  .card .image-container {
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 16px;
    position: relative;
    cursor: pointer;
  }

  .image-container:hover .image-cover {
    background-color: var(--cyan);
  }

  .image-container:hover .eye-icon {
    opacity: 1;
  }

  .image-cover {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    opacity: 0.4;
    background-color: none;
    transition: background-color 200ms ease-in;
  }

  .eye-icon {
    position: absolute;
    top: calc(50% - 24px);
    left: calc(50% - 24px);
    margin: 0 auto;
    opacity: 0;
    transition: opacity 200ms ease-in;
  }

  .card h1 {
    color: white;
    font-weight: 600;
    font-size: 24px;
    margin-bottom: 12px;
    cursor: pointer;
    transition: color 200ms ease-in;
  }

  .card h1:hover {
    color: var(--cyan);
  }

  .card > p {
    color: var(--soft-blue);
    font-weight: 300;
    font-size: 18px;
    margin-bottom: 16px;
  }

  .information {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16px;
  }

  .price,
  .time {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    gap: 4px;
    flex: 1;
    font-weight: 400;
  }

  .price {
    justify-content: start;
  }

  .time {
    justify-content: end;
  }

  .price h2 {
    font-size: 18px;
    font-weight: 600;
    color: var(--cyan);
  }

  .time p {
    color: var(--soft-blue);
  }

  hr {
    border-color: var(--line);
    margin-bottom: 16px;
  }

  .card-footer {
    display: flex;
    align-items: center;
    gap: 16px;
    color: var(--soft-blue);
  }

  .card-footer img {
    border: 2px solid white;
    border-radius: 100%;
    height: 36px;
  }

  .card-footer span {
    color: white;
    cursor: pointer;
    transition: color 200ms ease-in;
  }

  .card-footer span:hover {
    color: var(--cyan);
  }
</style>
