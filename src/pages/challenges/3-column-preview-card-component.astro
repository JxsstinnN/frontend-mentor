---
import ChallengeLayout from "../../layouts/ChallengeLayout.astro";
---

<ChallengeLayout title="QR Code Component - Challenges">
  <Fragment slot="links">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@700&family=Lexend+Deca&display=swap"
      rel="stylesheet"
    />
  </Fragment>

  <div class="container">
    <div class="card orange">
      <div class="icon">
        <img src="./public/images/icon-sedans.svg" alt="Sedans" />
      </div>
      <h2>Sedans</h2>
      <p>
        Choose a sedan for its affordability and excellent fuel economy. Ideal
        for cruising in the city or on your next road trip.
      </p>
      <button>Learn More</button>
    </div>
    <div class="card blue">
      <div class="icon">
        <img
          src="/challenges/3-column-preview-card-component/icon-suvs.svg"
          alt="SUVs"
        />
      </div>
      <h2>SUVs</h2>
      <p>
        Take an SUV for its spacious interior, power, and versatility. Perfect
        for your next family vacation and off-road adventures.
      </p>
      <button>Learn More</button>
    </div>
    <div class="card green">
      <div class="icon">
        <img src="./public/images/icon-luxury.svg" alt="Luxury" />
      </div>
      <h2>Luxury</h2>
      <p>
        Cruise in the best car brands without the bloated prices. Enjoy the
        enhanced comfort of a luxury rental and arrive in style.
      </p>
      <button>Learn More</button>
    </div>
  </div>
</ChallengeLayout>

<style>
  :root {
    --light-grey: hsl(0, 0%, 95%);
    --transparent-white: hsla(0, 0%, 100%, 0.75);
    --orange: #d88a35;
    --blue: #296771;
    --green: #194141;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background-color: var(--light-grey);
    height: 100vh;
  }

  .container {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-block: 5rem;
  }

  .card {
    margin-inline: 1.5rem;
    padding: 3rem 2.5rem;
    width: 312px;
  }

  .card:nth-child(1) {
    border-radius: 8px 8px 0 0;
  }

  .card:nth-child(3) {
    border-radius: 0 0 8px 8px;
  }

  .card.orange {
    background-color: var(--orange);
    color: var(--orange);
  }

  .card.blue {
    background-color: var(--blue);
    color: var(--blue);
  }
  .card.green {
    background-color: var(--green);
    color: var(--green);
  }

  h2 {
    font-family: "Big Shoulders Display", cursive;
    text-transform: uppercase;
    color: var(--light-grey);
    font-size: 40px;
    margin-block: 2rem;
  }

  p {
    font-family: "Lexend Deca", sans-serif;
    color: var(--transparent-white);
    font-size: 15px;
    line-height: 24px;
  }

  button {
    font-family: "Lexend Deca", sans-serif;
    font-weight: 400;
    font-size: 15px;
    border: none;
    margin-top: 20px;
    padding: 14px 2rem;
    border-radius: 2rem;
    background-color: var(--light-grey);
    color: inherit;
    border: 2px solid var(--light-grey);
    transition: background-color 200ms ease-in, color 200ms ease-in;
    cursor: pointer;
  }

  button:hover {
    background-color: transparent;
    color: white;
  }

  @media (min-width: 776px) {
    .container {
      height: 100%;
      flex-direction: row;
      justify-content: center;
      align-items: center;
    }

    .card {
      margin: 0;
      padding: 3rem 50px;
    }

    .card:nth-child(1) {
      border-radius: 8px 0 0 8px;
    }
    .card:nth-child(3) {
      border-radius: 0 8px 8px 0;
    }

    button {
      margin-top: 6rem;
    }
  }
</style>
